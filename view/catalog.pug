doctype html
html
    head
        title Book Catalog
    body
        h1 Book Catalog
        form(action="/newbookform" method="GET")
            input(type="submit" value="Add New Book")
        form(action="/book" method="GET")
            label(for="search") Search by ID:
            input(type="text" name="id" id="search")
            input(type="submit" value="Search")
        table
            tr
                th ID
                th Title
                th Author
                th Year of Publish
                th Page Number
                th Synopsis
                th Genre
                th Type
                th Cover
            each book in data
                tr
                    td #{book.id}
                    td #{book.title}
                    td #{book.author}
                    td #{book.year_of_publish}
                    td #{book.page_number}
                    td #{book.synopsis}
                    td #{book.genre}
                    td #{book.type}
                    td
                        img(src= `#{book.cover}`)